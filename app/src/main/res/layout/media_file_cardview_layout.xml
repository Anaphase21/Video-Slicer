<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/media_file_cardview_layout"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    app:cardElevation="0dp"
    app:cardForegroundColor="@color/media_file_cardview_color_state_list"
    app:checkedIcon="@drawable/ic_baseline_file_selected_check_box_24"
    app:checkedIconTint="@color/secondaryDarkColor">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#444444"
        android:id="@+id/divider"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/media_file_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/media_file_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:lines="2"
            android:textColor="@color/primaryDarkTextColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/media_file_thumbnail"/>
        <TextView
            android:id="@+id/media_file_duration"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/secondaryLightTextColor"
            app:layout_constraintLeft_toRightOf="@id/media_file_thumbnail"
            app:layout_constraintTop_toBottomOf="@id/media_file_name"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/media_file_size"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/secondaryLightTextColor"
            app:layout_constraintLeft_toRightOf="@id/media_file_duration"
            app:layout_constraintRight_toLeftOf="@id/media_file_size"
            app:layout_constraintTop_toBottomOf="@id/media_file_name"/>
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/media_file_date"
            android:textColor="@color/secondaryLightTextColor"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/media_file_name"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>